rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY: Open rules for MVP development
    // TODO: Implement proper Auth0 + Firebase custom token authentication
    
    // Single global canvas document
    match /canvas {
      allow read, write: if true;
    }
    
    // Objects subcollection
    match /canvas/objects/{objectId} {
      allow read, write: if true;
    }
    
    // Cursors subcollection
    match /canvas/cursors/{userId} {
      allow read, write: if true;
    }
    
    // Users collection - temporarily open for MVP
    match /users/{userId} {
      allow read, write: if true;
    }
  }
}
